#!/bin/sh

# enable restart X
setxkbmap -option terminate:ctrl_alt_bksp &
# disable CapsLock & map to Escape
#setxkbmap -option caps:escape &

# set wallpaper
sh ~/.fehbg &

# start the screensaver
#xscreensaver -no-splash &

# start terminal emulation daemon
/usr/bin/urxvtd -q -o -f &

# Dropbox
#(sleep 60s && ~/.dropbox-dist/dropboxd) &

# Dzen & conky
(sleep 3s && conky | dzen2 -x '544' -e '' -fg '#737373' -bg '#262626' -w '490' -h '14' -ta r -fn '-*-fixed-medium-r-*-*-12-*-*-*-*-*-iso8859-*' -p ) &

# Start dwm
exec ck-launch-session ~/Scripts/dwm-start
